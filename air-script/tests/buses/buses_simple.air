def BusesAir

trace_columns {
    main: [a],
}

buses {
    multiset p,
    logup q,
}

public_inputs {
    inputs: [2],
}

boundary_constraints {
    enf p.first = null;
    enf q.first = null;
    enf p.last = null;
    enf q.last = null;
    # TODO: to be used when we have support for variable-length public inputs
    #enf p.last = inputs;
    #enf q.last = inputs;
}

integrity_constraints {
    p.insert(1) when a;
    p.remove(1) when (1 - a);
    q.insert(1, 2) when a;
    q.remove(1, 2) for 2;
}
